{
  "name": "autopr",
  "displayName": "AutoPR",
  "description": "AI-Powered Code Quality and Automation for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets",
    "Testing"
  ],
  "activationEvents": [
    "onCommand:autopr.qualityCheck",
    "onCommand:autopr.fileSplit",
    "onCommand:autopr.autoFix",
    "onCommand:autopr.showDashboard",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autopr.qualityCheck",
        "title": "AutoPR: Run Quality Check",
        "category": "AutoPR"
      },
      {
        "command": "autopr.qualityCheckFile",
        "title": "AutoPR: Check Current File",
        "category": "AutoPR"
      },
      {
        "command": "autopr.qualityCheckWorkspace",
        "title": "AutoPR: Check Workspace",
        "category": "AutoPR"
      },
      {
        "command": "autopr.fileSplit",
        "title": "AutoPR: Split Large File",
        "category": "AutoPR"
      },
      {
        "command": "autopr.autoFix",
        "title": "AutoPR: Auto-Fix Issues",
        "category": "AutoPR"
      },
      {
        "command": "autopr.showDashboard",
        "title": "AutoPR: Show Dashboard",
        "category": "AutoPR"
      },
      {
        "command": "autopr.configure",
        "title": "AutoPR: Configure",
        "category": "AutoPR"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "autopr.qualityCheck",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "autopr.qualityCheckFile",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "autopr.qualityCheckWorkspace",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "autopr.fileSplit",
          "when": "resourceLangId == python"
        },
        {
          "command": "autopr.autoFix",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "autopr.showDashboard"
        },
        {
          "command": "autopr.configure"
        }
      ],
      "editor/context": [
        {
          "command": "autopr.qualityCheckFile",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript",
          "group": "navigation"
        },
        {
          "command": "autopr.autoFix",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AutoPR",
      "properties": {
        "autopr.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoPR extension"
        },
        "autopr.qualityMode": {
          "type": "string",
          "enum": ["ultra-fast", "fast", "smart", "comprehensive", "ai-enhanced"],
          "default": "fast",
          "description": "Default quality analysis mode"
        },
        "autopr.autoFixEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic fixing of issues"
        },
        "autopr.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for AutoPR operations"
        },
        "autopr.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable"
        },
        "autopr.maxFileSize": {
          "type": "number",
          "default": 10000,
          "description": "Maximum file size (in lines) for analysis"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "autoprIssues",
          "name": "AutoPR Issues",
          "when": "autopr.hasIssues"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autopr",
          "title": "AutoPR",
          "icon": "resources/autopr-icon.svg"
        }
      ]
    },
    "views": {
      "autopr": [
        {
          "id": "autoprIssues",
          "name": "Issues",
          "when": "autopr.hasIssues"
        },
        {
          "id": "autoprMetrics",
          "name": "Metrics"
        },
        {
          "id": "autoprHistory",
          "name": "History"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "vscode-test": "^2.3.0"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
