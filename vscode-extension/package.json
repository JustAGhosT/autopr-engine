          "command": "autopr.qualityCheck",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "autopr.qualityCheckFile",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "autopr.qualityCheckWorkspace",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "autopr.fileSplit",
          "when": "resourceLangId == python"
        },
        {
          "command": "autopr.autoFix",
          "when": "resourceLangId == python || resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "autopr.showDashboard"
        },
        {
          "command": "autopr.configure"
        },
        {
          "command": "autopr.setVolume"
        },
