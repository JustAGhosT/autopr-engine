{
  "tool": "yaml",
  "description": "YAML language support and validation",
  "activation_levels": {
    "0": {
      "enabled": false,
      "settings": {
        "yaml.validate": false,
        "yaml.completion": false,
        "yaml.hover": false,
        "yaml.format.enable": false,
        "yaml.trace.server": "off",
        "redhat.vscode-yaml.enabled": false,
        "files.associations": {
          "*.py": "plaintext",
          "*.yml": "plaintext",
          "*.yaml": "plaintext",
          "*.ps1": "plaintext"
        }
      }
    },
    "100": {
      "enabled": true,
      "settings": {
        "yaml.validate": false,
        "yaml.completion": true,
        "yaml.hover": true,
        "yaml.format.enable": false,
        "yaml.trace.server": "off",
        "redhat.vscode-yaml.enabled": true,
        "files.associations": {}
      }
    },
    "300": {
      "enabled": true,
      "settings": {
        "yaml.validate": true,
        "yaml.completion": true,
        "yaml.hover": true,
        "yaml.format.enable": false,
        "yaml.trace.server": "messages",
        "redhat.vscode-yaml.enabled": true,
        "yaml.schemaStore.enable": false
      }
    },
    "700": {
      "enabled": true,
      "settings": {
        "yaml.validate": true,
        "yaml.completion": true,
        "yaml.hover": true,
        "yaml.format.enable": true,
        "yaml.trace.server": "messages",
        "redhat.vscode-yaml.enabled": true,
        "yaml.schemaStore.enable": true
      }
    },
    "1000": {
      "enabled": true,
      "settings": {
        "yaml.validate": true,
        "yaml.completion": true,
        "yaml.hover": true,
        "yaml.format.enable": true,
        "yaml.trace.server": "verbose",
        "redhat.vscode-yaml.enabled": true,
        "yaml.schemaStore.enable": true,
        "yaml.customTags": [],
        "editor.formatOnSave": true
      }
    }
  }
}
